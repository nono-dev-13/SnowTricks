{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
<div class="container">
    <div class="row my-5">
        <div class="col-12 col-lg-4 offset-lg-4">
            <h1 class="h3 mb-3 font-weight-normal">Réinitialisez votre mot de passe</h1>

            {{ form_start(resetForm) }}

            {{ form_row(resetForm.plainPassword) }}

            <button class="btn btn-primary">Réinitialiser mon mot de passe</button>
            {{ form_end(resetForm) }}

        </div>
    </div>
</div>
{% endblock %}